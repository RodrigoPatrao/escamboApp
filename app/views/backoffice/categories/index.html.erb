<div class="row">
  <div class="col-lg-9">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= fa_icon("tags") %>
          <%= t(Category.model_name.human(count: Category.count)) %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-condensed">
            <thead>
              <tr>
                <th>
                  <%= t(Category.human_attribute_name(:description)) %>
                </th>
                <th>
                  <%= link_to fa_icon("plus-circle", text: "Adicionar Categoria"), new_backoffice_category_path, class: "btn btn-success pull-right", style: "margin-top: -5px;" %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |c| %>
              <tr>
                <td><%= c.description %></td>
                <td>
                  <%= link_to fa_icon("edit"),
                  edit_backoffice_category_path(c),
                  class: "btn btn-xs btn-circle btn-warning" %>
                  <%= link_to fa_icon("trash-o"),
                  backoffice_category_path(c),
                  method: :delete,
                  data: { confirm: "Tem certeza?" },
                  class: "btn btn-xs btn-circle btn-danger" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-lg-6 text-left">
            <p><%= page_entries_info @categories %></p>
          </div>
          <div class="col-lg-6 text-right">
            <%= paginate @categories %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
