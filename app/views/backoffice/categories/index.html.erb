<div class="panel panel-info">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-8">
        <p class="panel-title">
          <%= fa_icon("tags") %>
          <%= page_entries_info @categories %>
        </p>
      </div>
      <div class="col-lg-4">
        <%= link_to fa_icon("plus-circle", text: "Adicionar Categoria"), new_backoffice_category_path, class: "btn btn-primary pull-right", style: "margin-top: 0;" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>
              <%= t(Category.human_attribute_name(:description)) %>
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |c| %>
          <tr>
            <td><%= c.description %></td>
            <td>
              <%= link_to fa_icon("pencil"),
              edit_backoffice_category_path(c),
              class: "btn btn-circle btn-warning" %>
              <%= link_to fa_icon("trash-o"),
              backoffice_category_path(c),
              method: :delete,
              data: { confirm: "Tem certeza?" },
              class: "btn btn-circle btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= paginate @categories %>
      </div>
    </div>
  </div>
</div>
