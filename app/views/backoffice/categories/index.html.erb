<!-- Page Content -->
<div id="page-wrapper">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t(Category.model_name.human(count: Category.count)) %></h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>
                  <%= t(Category.human_attribute_name(:description)) %>
                </th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |c| %>
              <tr>
                <td><%= c.id %></td>
                <td><%= c.description %></td>
                <td>
                  <%= link_to fa_icon("edit"),
                  backoffice_categories_index_path,
                  class: "btn btn-xs btn-circle btn-warning" %>
                  <%= link_to fa_icon("trash"),
                  backoffice_categories_index_path,
                  class: "btn btn-xs btn-circle btn-danger" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
