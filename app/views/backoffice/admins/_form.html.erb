<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><%= header %></h3>
      </div>
      <%= form_for([:backoffice, @admin]) do |f| %>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
                <p class="help-block">MÃ­nimo 6 caracteres</p>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <% if policy(@admin).edit? %>
              <div class="form-group">
                <label>Acesso</label><br>
                <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                  <%= b.label { b.radio_button } %>&nbsp;<%= b.text %><br>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit class: "btn btn-success" %>
          <%= link_to fa_icon("arrow-left", text: "Voltar"), backoffice_admins_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
