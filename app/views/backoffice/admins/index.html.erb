<div class="panel panel-success">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-8">
        <p class="panel-title">
          <%= fa_icon("users") %>
          Administradores
        </p>
      </div>
      <% if policy(@admins).new? %>
      <div class="col-lg-4 text-right">
        <%= link_to fa_icon("plus-circle", text: "Novo Administrador"), new_backoffice_admin_path, class: "btn btn-success", style: "margin-top: 0;" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th><%= t(Admin.human_attribute_name(:name)) %></th>
            <th><%= t(Admin.human_attribute_name(:email)) %></th>
            <th><%= t(Admin.human_attribute_name(:role)) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |a| %>
            <% if a != current_admin %>
              <tr>
                <td><%= a.name %></td>
                <td><%= a.email %></td>
                <td><%= a.role_i18n %></td>
                <td>
                  <%= link_to fa_icon("envelope"),
                    '#',
                    class: "btn btn-circle btn-primary",
                    data: { toggle: 'modal', target: '#sendEmailModal', name: a.name, email: a.email } %>
                  <%= link_to fa_icon("pencil"),
                  edit_backoffice_admin_path(a),
                  class: "btn btn-circle btn-warning" %>
                  <% if policy(@admins).destroy? %>
                    <%= link_to fa_icon("trash-o"),
                    backoffice_admin_path(a),
                    method: :delete,
                    data: { confirm: "Deseja excluir #{a.name}?" },
                    class: "btn btn-circle btn-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= paginate @admins %>
      </div>
    </div>
  </div>
</div>
<%= render "sendMail" %>
