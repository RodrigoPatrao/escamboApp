<div class="modal fade" id="sendEmailModal" tabindex="-1" role="dialog" aria-labelledby="sendEmailModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-success">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="sendEmailModalLabel"></h4>
      </div>
      <div class="modal-body">
      <%= form_tag(backoffice_send_mail_index_path) do %>
        <div class="form-group">
          <label for="recipient" class="control-label">Para:</label>
          <%= text_field_tag(:recipient, nil, readonly: 'readonly', class:"form-control") %>
        </div>
        <div class="form-group">
          <label for="subject" class="control-label">Assunto:</label>
          <%= text_field_tag(:subject, nil, class:"form-control", required: 'required') %>
        </div>
        <div class="form-group">
          <label for="message" class="control-label">Mensagem:</label>
          <%= text_area_tag(:message, nil, class:"form-control", required: 'required') %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Enviar Mensagem</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
