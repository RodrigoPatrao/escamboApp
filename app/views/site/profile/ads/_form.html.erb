<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= header %></h3>
      </div>
      <%= form_for([:site, :profile, @ad]) do |f| %>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :picture %><br>
            <%= image_tag @ad.picture(:medium), class: "rounded" %>
            <p></p>
            <%= f.file_field :picture, class: "form-control-file" %>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :price %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <%= currency_symbol %>
                  </div>
                  <%= f.text_field :price, class: "form-control" %>
                  </div>
              </div>
            </div>
            <div class="col-sm-8">
              <%= f.label :category_id %>
              <%= f.collection_select :category_id, Category.all, :id, :description, { prompt: true }, { class: "form-control" } %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit class: "btn btn-success"  %>
          <%= link_to fa_icon("arrow-left", text: "Voltar"), site_profile_ads_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
