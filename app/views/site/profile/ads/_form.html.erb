<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= header %></h3>
      </div>
      <%= form_for([:site, :profile, @ad], html: { multipart: true }) do |f| %>
        <div class="panel-body">
          <% if @ad.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                <%= fa_icon("times") %>
              </button>
              <p><%= @ad.errors.count %> erros impediram a gravação do registro:</p>
              <ul>
                <% @ad.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :picture %>
            <% if @ad.picture.present? %>
              <br>
              <%= image_tag @ad.picture(:thumb), class: "rounded", style: "margin-bottom: 10px;" %>
            <% end %>
            <%= f.file_field :picture, class: "form-control-file" %>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :price %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <%= currency_symbol %>
                  </div>
                  <%= f.text_field :price, class: "form-control" %>
                  </div>
              </div>
            </div>
            <div class="col-sm-8">
              <%= f.label :category_id %>
              <%= f.collection_select :category_id, Category.all, :id, :description, { prompt: true }, { class: "form-control" } %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit class: "btn btn-success"  %>
          <%= link_to fa_icon("arrow-left", text: "Voltar"), site_profile_ads_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
